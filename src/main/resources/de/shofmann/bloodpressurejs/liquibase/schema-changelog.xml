<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="shofmann">
        
        <createTable tableName="blood_pressure">
            <column name="id" type="bigint" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>                
            </column>
            <column name="diastole" type="int">                
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="int">                
                <constraints nullable="false"/>
            </column>
            <column name="systole" type="int">                
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addUniqueConstraint columnNames="creation_date, diastole, rate, systole" tableName="blood_pressure" />
        
        <createIndex tableName="blood_pressure" indexName="idx_blood_pressure_cdate">
            <column name="creation_date" type="timestamp"/>
        </createIndex>
        
        <createSequence sequenceName="seq_blood_pressure" startValue="500" incrementBy="1"/>
        
        <rollback>        
            <dropSequence sequenceName="seq_blood_pressure"/>
            <dropIndex tableName="blood_pressure" indexName="idx_blood_pressure_cdate"/>
            <dropTable tableName="blood_pressure"/>            
        </rollback>
        
    </changeSet>
    
    <changeSet id="2" author="shofmann">

        <createTable tableName="sequence">
            <column name="seq_name" type="varchar(50)" >
                <constraints nullable="false"/>
            </column>
            <column name="seq_count" type="numeric">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <insert tableName="sequence">
            <column name="seq_name" value="SEQ_GEN"/>
            <column name="seq_count" valueNumeric="1000"/>
        </insert>

        <dropSequence sequenceName="seq_blood_pressure"/>
        
        <rollback>
            <dropTable tableName="sequence"/>
            <createSequence sequenceName="seq_blood_pressure" startValue="1000" incrementBy="1"/>
        </rollback>        
        
    </changeSet>
    
    <changeSet id="3" author="shofmann">
        
        <createTable tableName="weight">
            <column name="id" type="bigint" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>                
            </column>
            <column name="weight" type="float">                
                <constraints nullable="false"/>
            </column>
            <column name="body_fat" type="float">                
                <constraints nullable="false"/>
            </column>
            <column name="water" type="float">                
                <constraints nullable="false"/>
            </column>
            <column name="muscle" type="float">                
                <constraints nullable="false"/>
            </column>
            <column name="bone" type="float">                
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addUniqueConstraint columnNames="creation_date, weight, body_fat, water, muscle, bone" tableName="weight" />
        
        <createIndex tableName="weight" indexName="idx_weight_cdate">
            <column name="creation_date" type="timestamp"/>
        </createIndex>
        
        <rollback>                    
            <dropIndex tableName="weight" indexName="idx_weight_cdate"/>
            <dropTable tableName="weight"/>            
        </rollback>
        
    </changeSet>
    
    <changeSet id="4" author="shofmann">
        
        <addColumn tableName="weight">
            <column name="bmi" type="float" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <dropUniqueConstraint tableName="weight" constraintName="weight_creation_date_weight_body_fat_water_muscle_bone_key"/>
        
        <addUniqueConstraint columnNames="creation_date, weight, body_fat, water, muscle, bone, bmi" tableName="weight" constraintName="weight_unique_constraint"/>
        
        <dropDefaultValue tableName="weight" columnName="bmi"/>
        
        <rollback>            
            <dropUniqueConstraint tableName="weight" constraintName="weight_creation_date_weight_body_fat_water_muscle_bone_bmi_key"/>
            <dropColumn tableName="weight" columnName="bmi"/>
            <addUniqueConstraint columnNames="creation_date, weight, body_fat, water, muscle, bone" tableName="weight" />
        </rollback>
        
    </changeSet>
    
</databaseChangeLog>
